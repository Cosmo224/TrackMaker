<UserControl x:Class="DanoUI.BasinSwitcher"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DanoUI"
        mc:Ignorable="d"
        d:DesignHeight="450" d:DesignWidth="486.104" Loaded="Window_Loaded">
    <Grid>
        <TextBlock x:Name="Dano_SwitchBasins" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="DanoUI Switch Basins" VerticalAlignment="Top" FontSize="36" FontStyle="Italic"/>
        <ListBox x:Name="BasinList" HorizontalAlignment="Left" Height="317" Margin="10,63,0,0" VerticalAlignment="Top" Width="258" ItemsSource="{Binding BasinString}" Foreground="#FF3030A0"/>
        <Button x:Name="OKButton" Content="Switch" HorizontalAlignment="Left" Margin="359,63,0,0" VerticalAlignment="Top" Width="93" FontSize="18" Click="OKButton_Click"/>

    </Grid>
</UserControl>
