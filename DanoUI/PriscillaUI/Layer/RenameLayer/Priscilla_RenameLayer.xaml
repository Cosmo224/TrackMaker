<UserControl x:Class="DanoUI.RenameLayer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DanoUI"
             mc:Ignorable="d" Height="137.073" Width="726.108" Loaded="UserControl_Loaded">
    <Grid>
        <TextBlock x:Name="RenameLayer_Header" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Rename Layer" VerticalAlignment="Top" FontSize="48" FontStyle="Italic"/>
        <TextBlock x:Name="RenameLayer_Name" HorizontalAlignment="Left" Height="32" Margin="10,84,0,0" TextWrapping="Wrap" Text="Name:" VerticalAlignment="Top" Width="73"/>
        <TextBox x:Name="RenameLayer_NameBox" HorizontalAlignment="Left" Height="29" Margin="88,82,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="403" Style="{StaticResource TextBox_BW}" Text="{Binding PreviousName}"/>
        <Button Style="{StaticResource Button_Invert}" x:Name="CreateLayer_OKButton" Content="OK" HorizontalAlignment="Left" Height="29" Margin="553,82,0,0" VerticalAlignment="Top" Width="123" Click="RenameLayer_OKButton_Click"/>

    </Grid>
</UserControl>
